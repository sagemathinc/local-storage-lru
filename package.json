{
  "name": "@cocalc/local-storage-lru",
  "version": "2.1.1",
  "description": "Simple LRU cache for a browser's localStorage",
  "main": "./lib/index.js",
  "exports": {
    ".": "./lib/index.js"
  },
  "scripts": {
    "test": "jest --config jestconfig.json && npm run make-badges",
    "build": "tsc",
    "format": "prettier --write \"**/*.ts\" \"**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint && npm test",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "make-badges": "istanbul-badges-readme",
    "docs-show": "xdg-open ./docs/index.html",
    "docs": "npx typedoc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sagemathinc/local-storage-lru.git"
  },
  "keywords": [
    "localStorage",
    "LRU",
    "Cache"
  ],
  "author": "Sagemath, Inc.",
  "license": "APACHE-2.0",
  "homepage": "https://sagemathinc.github.io/local-storage-lru/",
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "istanbul-badges-readme": "^1.8.1",
    "jest": "^27.4.7",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typedoc": "^0.22.11",
    "typescript": "^4.5.4"
  },
  "files": [
    "lib/**/*"
  ],
  "bugs": {
    "url": "https://github.com/sagemathinc/local-storage-lru/issues"
  }
}
